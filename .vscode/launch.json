{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Staging",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_staging.dart", //To Change Entry Point
            "args": [                       //To add arguments, For Eg:flutter run --flavor dev
                "--flavor",
                "staging",
            ]
        },
        {
            "name": "Production",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_production.dart",
            "args": [
                "--flavor",
                "production"
            ]
        },
        {
            "name": "Profile mode",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "Release mode",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
}